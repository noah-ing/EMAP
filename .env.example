# EMAP environment variables
# Copy this file to .env and fill in your values

# OpenAI API key (required)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your-api-key-here

# Model configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_RETRIES=3

# Evolution parameters (defaults, can be overridden)
EMAP_POPULATION_SIZE=20
EMAP_GENERATIONS=50
EMAP_TOURNAMENT_SIZE=3
EMAP_ELITE_COUNT=2
EMAP_MUTATION_RATE=0.3
EMAP_CROSSOVER_RATE=0.5

# Budget regimes (tokens)
EMAP_BUDGET_TIGHT=2000
EMAP_BUDGET_MEDIUM=5000
EMAP_BUDGET_LOOSE=10000

# Logging
EMAP_LOG_LEVEL=INFO
EMAP_RESULTS_DIR=experiments/results
